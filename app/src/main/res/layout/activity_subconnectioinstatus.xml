<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".subactivity_IOPORT">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Connection Status"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="24sp"
                    android:textStyle="bold" />


                <!-- O2 -->
                <TextView
                    android:id="@+id/connectionStatusTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="VALVE Status"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp"/>

                <!-- Solenoid Valve 1 (Press) -->
                <TextView
                    android:id="@+id/solenoidValve1"
                    android:layout_width="335dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="Solenoid Valve 1 (Press)"
                    app:layout_constraintEnd_toStartOf="@+id/indicatorSolenoidValve1"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/connectionStatusTitle" />

                <ImageView
                    android:id="@+id/indicatorSolenoidValve1"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/gray"
                    app:layout_constraintTop_toTopOf="@id/solenoidValve1"
                    app:layout_constraintBottom_toBottomOf="@id/solenoidValve1"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="8dp"/>
                <!-- Solenoid Valve 1 (Press) -->
                <TextView
                    android:id="@+id/solenoidValve2"
                    android:layout_width="335dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="Solenoid Valve 2 (Vent)"
                    app:layout_constraintEnd_toStartOf="@+id/indicatorSolenoidValve1"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/connectionStatusTitle" />

                <ImageView
                    android:id="@+id/indicatorSolenoidValve2"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/gray"
                    app:layout_constraintTop_toTopOf="@id/solenoidValve1"
                    app:layout_constraintBottom_toBottomOf="@id/solenoidValve1"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="8dp"/>
                <!-- Solenoid Valve 1 (Press) -->
                <TextView
                    android:id="@+id/proportionalVavle1"
                    android:layout_width="335dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="proportional Valve 1(Press)"
                    app:layout_constraintEnd_toStartOf="@+id/indicatorSolenoidValve1"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/connectionStatusTitle" />

                <ImageView
                    android:id="@+id/indicatorProportionalValve1"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/gray"
                    app:layout_constraintTop_toTopOf="@id/solenoidValve1"
                    app:layout_constraintBottom_toBottomOf="@id/solenoidValve1"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="8dp"/>
                <!-- Solenoid Valve 1 (Press) -->
                <TextView
                    android:id="@+id/ProportionalValve2"
                    android:layout_width="335dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="proportional Valve 2(Vent)"
                    app:layout_constraintEnd_toStartOf="@+id/indicatorSolenoidValve1"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/connectionStatusTitle" />

                <ImageView
                    android:id="@+id/indicatorProportionalValve2"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/gray"
                    app:layout_constraintTop_toTopOf="@id/solenoidValve1"
                    app:layout_constraintBottom_toBottomOf="@id/solenoidValve1"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="8dp"/>
                <!-- Solenoid Valve 1 (Press) -->


                <TextView
                    android:id="@+id/example1"
                    android:layout_width="335dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="Solenoid example 1 (Press)"
                    app:layout_constraintEnd_toStartOf="@+id/indicatorSolenoidValve1"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/connectionStatusTitle" />

                <ImageView
                    android:id="@+id/indicatorExample"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/gray"
                    app:layout_constraintTop_toTopOf="@id/solenoidValve1"
                    app:layout_constraintBottom_toBottomOf="@id/solenoidValve1"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="8dp"/>


                <!-- Add more controls for CO2, Humidity, Temp, Pressure, Flow -->

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="16dp">


                <!-- O2 -->

                <TextView
                    android:id="@+id/connectionStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Sensor Status"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/Co2sensor"
                    android:layout_width="335dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="CO2 Sensor"
                    app:layout_constraintEnd_toStartOf="@+id/indicatorSolenoidValve1"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/connectionStatusTitle" />

                <ImageView
                    android:id="@+id/indicatorCo2sensor"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/gray"
                    app:layout_constraintTop_toTopOf="@id/solenoidValve1"
                    app:layout_constraintBottom_toBottomOf="@id/solenoidValve1"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="8dp"/>


                <TextView
                    android:id="@+id/FlowSensor"
                    android:layout_width="335dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="Flow Sensor"
                    app:layout_constraintEnd_toStartOf="@+id/indicatorSolenoidValve1"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/connectionStatusTitle" />

                <ImageView
                    android:id="@+id/indicatorFlowSensor"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/gray"
                    app:layout_constraintTop_toTopOf="@id/solenoidValve1"
                    app:layout_constraintBottom_toBottomOf="@id/solenoidValve1"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="8dp"/>

                <TextView
                    android:id="@+id/PressureSensor"
                    android:layout_width="335dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="Pressure Sensor"
                    app:layout_constraintEnd_toStartOf="@+id/indicatorSolenoidValve1"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/connectionStatusTitle" />

                <ImageView
                    android:id="@+id/indicatorPressureSensor"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/gray"
                    app:layout_constraintTop_toTopOf="@id/solenoidValve1"
                    app:layout_constraintBottom_toBottomOf="@id/solenoidValve1"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="8dp"/>


                <TextView
                    android:id="@+id/DoorlockLampGREEN"
                    android:layout_width="335dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="Doorlock Lamp(GREEN)"
                    app:layout_constraintEnd_toStartOf="@+id/indicatorSolenoidValve1"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/connectionStatusTitle" />

                <ImageView
                    android:id="@+id/indicatorDoorlockLampGREEN"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/gray"
                    app:layout_constraintTop_toTopOf="@id/solenoidValve1"
                    app:layout_constraintBottom_toBottomOf="@id/solenoidValve1"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="8dp"/>


                <TextView
                    android:id="@+id/indicatorDoorlockLampRED"
                    android:layout_width="335dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="Doorlock Lamp(RED)"

                    app:layout_constraintEnd_toStartOf="@+id/indicatorSolenoidValve1"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/connectionStatusTitle" />

                <ImageView
                    android:id="@+id/indicatorindicatorDoorlockLampRED"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/gray"
                    app:layout_constraintTop_toTopOf="@id/solenoidValve1"
                    app:layout_constraintBottom_toBottomOf="@id/solenoidValve1"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="8dp"/>


            </LinearLayout>

        </LinearLayout>
    </ScrollView>


    <android.widget.Button
        android:id="@+id/exitButton"
        android:layout_width="106dp"
        android:layout_height="57dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/round"
        android:text="EXIT"
        android:textColor="#ffffff"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
